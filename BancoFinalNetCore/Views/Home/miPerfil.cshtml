@model BancoFinalNetCore.DTO.UsuarioDTO

@{
    ViewData["Title"] = "Editar usuario";
}

<div class="container py-4">
    <form class="custom-form cardPrincipal" asp-action="ProcesarFormularioEdicion" asp-controller="Perfil" enctype="multipart/form-data" method="post" asp-route-id="@Model.IdUsuario">
        <h2 class="text-center mb-5">
            <i class="bi bi-person-fill-gear" style="color: #1f3c85">Editar usuario</i>
        </h2>
        <div class="d-flex justify-content-center mt-4 mb-4">
            @if (Model.FotoPerfil != null)
            {
                <img src="data:image/jpeg;base64,@(Model.FotoPerfil != null ? Convert.ToBase64String(Model.FotoPerfil) : "")" class="rounded-circle img-fluid mx-auto" alt="Imagen de usuario" style="max-width: 200px; max-height: 200px;">
            }
            else
            {
                <span class="badge bg-dark">El usuario no tiene foto de perfil</span>
            }
        </div>
        <input type="hidden" name="id" value="@Model.IdUsuario" />
        
        <div class="mb-3">
            <label for="nombre" class="form-label textoPrincipal">Nombre: </label>
            <span>@Model.NombreUsuario</span>
        </div>
        <div class="mb-3">
            <label for="apellidos" class="form-label textoPrincipal">Apellidos: </label>
            <span>@Model.ApellidosUsuario</span>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label textoPrincipal">Email: </label>
            <span>@Model.EmailUsuario</span>
        </div>
        <div class="mb-3">
            <label for="telefono" class="form-label textoPrincipal">Teléfono: </label>
            <span>@Model.TlfUsuario</span>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label textoPrincipal">DNI: </label>
            <span>@Model.DniUsuario</span>
        </div>
        <div class="mb-3">
            <label for="foto" class="form-label textoPrincipal">Foto de Perfil</label>
            <input type="file" id="foto" name="foto" class="form-control" accept="image/*" />
        </div>
        <button type="submit" class="btn btn-primary mt-5">
            <i class="bi bi-person-fill-gear fs-5"> Guardar cambios</i>
        </button>
    </form>
</div>